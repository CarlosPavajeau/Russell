<UserControl x:Class="View.RegisterPersonUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:View"
             mc:Ignorable="d" 
             d:DesignHeight="730" d:DesignWidth="1080">
    <Grid Background="White">
        <StackPanel>
            <local:RegisterPersonFields x:Name="PersonFields"></local:RegisterPersonFields>
            <Button x:Name="RegisterPerson" Content="Registrar persona" Width="120" Style="{StaticResource PrimaryButton}" Click="RegisterPerson_Click"></Button>
            <Button x:Name="CloseButton" Content="Cerrar" Width="80" Click="CloseButton_Click" Style="{StaticResource PrimaryButton}"></Button>
        </StackPanel>
    </Grid>
</UserControl>
