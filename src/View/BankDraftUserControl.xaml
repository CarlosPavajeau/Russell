<UserControl x:Class="View.BankDraftUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:View"
             mc:Ignorable="d" 
             d:DesignHeight="730" d:DesignWidth="1080">
    <Grid x:Name="BankDraftMainGrid">
        <StackPanel x:Name="MainPanel" Margin="15">
            <TextBlock Text="Gestión de giros" Style="{StaticResource TitleText}"></TextBlock>
            <Button x:Name="RegisterBankDraftButton" Content="Agregar un giro" Style="{StaticResource ControlButton}" Margin="0,30,0,0" Click="RegisterBankDraftButton_Click"></Button>
            <Button x:Name="SearchBankDraftButton" Content="Buscar un giro" Style="{StaticResource ControlButton}" Click="SearchBankDraftButton_Click"></Button>
            <Button Content="Cancelar un giro" Style="{StaticResource ControlButton}" Margin="0,0"></Button>
            <Button Content="Listar giros" Style="{StaticResource ControlButton}"></Button>
        </StackPanel>
    </Grid>
</UserControl>