<UserControl x:Class="View.TransportFormUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:View"
             mc:Ignorable="d" 
             d:DesignHeight="730" d:DesignWidth="1080">
    <Grid x:Name="TransportTemplateMainGrid">
        <StackPanel x:Name="MainPanel" Margin="20,0,10,30">
            <TextBlock Text="Gestión de planillas de transporte" Style="{StaticResource TitleText}"></TextBlock>
            <Button x:Name="RegisterTransportForm" Content="Agregar planilla de transportes" Width="380" Style="{StaticResource ControlButton}" Margin="0,30,0,0" Click="RegisterTransportForm_Click"></Button>
            <Button x:Name="SeeCurrentTransportFrom" Content="Ver planilla actual"  Width="380" Margin="0,30,0,0" Style="{StaticResource ControlButton}" Click="SeeCurrentTransportFrom_Click"></Button>
            <Button x:Name="SearchTransportForm" Content="Buscar planilla de transporte" Width="380" Style="{StaticResource ControlButton}"></Button>
            <Button Content="Listar planillas" Width="380" Margin="0,0" Style="{StaticResource ControlButton}"></Button>
        </StackPanel>
    </Grid>
</UserControl>