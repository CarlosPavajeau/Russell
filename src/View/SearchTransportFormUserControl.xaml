<UserControl x:Class="View.SearchTransportFormUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Búsqueda de planilla de transporte" Style="{StaticResource TitleText}" Margin="0,30"></TextBlock>
            <local:SearchFields x:Name="SearchFields" Loaded="SearchFields_Loaded"></local:SearchFields>
        </StackPanel>
    </Grid>
</UserControl>
