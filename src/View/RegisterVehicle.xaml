<UserControl x:Class="View.RegisterVehicle"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:View"
             mc:Ignorable="d" 
             d:DesignHeight="730" d:DesignWidth="1080">
    <Grid Background="White">
        <StackPanel Margin="10,10">
            <TextBlock Text="Registro de vehículo" Style="{StaticResource TitleText}"></TextBlock>
            <StackPanel Orientation="Horizontal" Margin="20,50,0,0" Width="Auto">
                <StackPanel Margin="0,0,50,0">
                    <TextBlock Text="Placa: " FontSize="20"></TextBlock>
                    <TextBox x:Name="PlateField" Width="185" Height="30" Style="{StaticResource TextBoxStyle}" CharacterCasing="Upper"></TextBox>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="Número interno: " FontSize="20"></TextBlock>
                    <TextBox Width="185" Height="30" Style="{StaticResource TextBoxStyle}"></TextBox>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
