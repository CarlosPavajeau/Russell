<UserControl x:Class="View.CommendUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:View"
             mc:Ignorable="d" 
             d:DesignHeight="730" d:DesignWidth="1080">
    <Grid x:Name="CommendMainGrid">
        <StackPanel x:Name="MainPanel" Margin="15">
            <TextBlock Text="Gestión de encomiendas" Style="{StaticResource TitleText}"></TextBlock>
            <Button x:Name="RegisterCommendButton" Content="Agregar una encomienda" Width="300" Style="{StaticResource ControlButton}" Margin="0,30,0,0"></Button>
            <Button x:Name="SearchCommendButton" Content="Buscar una encomienda" Width="300" Style="{StaticResource ControlButton}"></Button>
            <Button Content="Cancelar una encomienda" Width="300" Style="{StaticResource ControlButton}" Margin="0,0"></Button>
            <Button Content="Listar encomiendas" Width="300" Style="{StaticResource ControlButton}"></Button>
        </StackPanel>
    </Grid>
</UserControl>
