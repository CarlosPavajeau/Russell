<UserControl x:Class="View.RoutesUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:View"
             mc:Ignorable="d" 
             d:DesignHeight="730" d:DesignWidth="1080">
    <Grid>
        <StackPanel x:Name="MainPanel" Margin="15">
            <TextBlock Text="Gestión de rutas" Style="{StaticResource TitleText}"></TextBlock>
            <StackPanel Margin="0,20">
                <Button x:Name="AddRouteButton"  Content="Agregar una ruta" Style="{StaticResource ControlButton}" Click="AddRouteButton_Click"></Button>
                <Button x:Name="DeleteRouteButton" Content="Eliminar una ruta" Style="{StaticResource ControlButton}"></Button>
                <Button x:Name="ListRoutesButton" Content="Listar rutas" Style="{StaticResource ControlButton}" Click="ListRoutesButton_Click">
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
